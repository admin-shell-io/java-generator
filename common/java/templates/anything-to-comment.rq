prefix idstt: <https://w3id.org/idsa/transformationtemplates/>
prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
prefix skos: <http://www.w3.org/2004/02/skos/core#>

template idstt:anything-to-comment(?thing, ?hasIndentation) {
	group {
		if (?hasIndentation,
			"\n\t* ",
			"\n* "
		)
		STR(?com) ; separator = ""
	}
}
WHERE {
	# Not using rdfs:label for Javadoc
    # { ?thing rdfs:label ?com . }
	# UNION
	{ ?thing rdfs:comment ?com . }
	UNION
	{ ?thing skos:note ?com . }
	UNION
	{ ?thing skos:scopeNote ?com . }
}
