<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.fraunhofer.iais.eis</groupId>
    <artifactId>ids-infomodel</artifactId>
    <version>0.19-SNAPSHOT</version>

    <properties>
        <!-- Adapt this path according to the location of the information model RDF sources -->
        <infomodel-rdf-basedir>${user.home}/projects/ids/ids_infomodel/InformationModel/modules</infomodel-rdf-basedir>

        <!-- module directories -->
        <infomodel-rdf-sourcedir2>${infomodel-rdf-basedir}/activity</infomodel-rdf-sourcedir2>
        <infomodel-rdf-sourcedir3>${infomodel-rdf-basedir}/base</infomodel-rdf-sourcedir3>
        <infomodel-rdf-sourcedir5>${infomodel-rdf-basedir}/broker</infomodel-rdf-sourcedir5>
        <infomodel-rdf-sourcedir6>${infomodel-rdf-basedir}/brokerCommunication</infomodel-rdf-sourcedir6>
        <infomodel-rdf-sourcedir7>${infomodel-rdf-basedir}/connector</infomodel-rdf-sourcedir7>
        <infomodel-rdf-sourcedir8>${infomodel-rdf-basedir}/contract</infomodel-rdf-sourcedir8>
        <infomodel-rdf-sourcedir9>${infomodel-rdf-basedir}/dataAsset</infomodel-rdf-sourcedir9>
        <infomodel-rdf-sourcedir10>${infomodel-rdf-basedir}/dataEndpoint</infomodel-rdf-sourcedir10>
        <infomodel-rdf-sourcedir11>${infomodel-rdf-basedir}/dataTransfer</infomodel-rdf-sourcedir11>
        <infomodel-rdf-sourcedir12>${infomodel-rdf-basedir}/hashFunction</infomodel-rdf-sourcedir12>
        <infomodel-rdf-sourcedir13>${infomodel-rdf-basedir}/httpMethod</infomodel-rdf-sourcedir13>
        <infomodel-rdf-sourcedir14>${infomodel-rdf-basedir}/industry</infomodel-rdf-sourcedir14>
        <infomodel-rdf-sourcedir15>${infomodel-rdf-basedir}/language</infomodel-rdf-sourcedir15>
        <infomodel-rdf-sourcedir16>${infomodel-rdf-basedir}/license</infomodel-rdf-sourcedir16>
        <infomodel-rdf-sourcedir17>${infomodel-rdf-basedir}/mediaType</infomodel-rdf-sourcedir17>
        <infomodel-rdf-sourcedir18>${infomodel-rdf-basedir}/parameterDataType</infomodel-rdf-sourcedir18>
        <infomodel-rdf-sourcedir19>${infomodel-rdf-basedir}/participant</infomodel-rdf-sourcedir19>
        <infomodel-rdf-sourcedir20>${infomodel-rdf-basedir}/operationBinding</infomodel-rdf-sourcedir20>
        <infomodel-rdf-sourcedir22>${infomodel-rdf-basedir}/securityProfile</infomodel-rdf-sourcedir22>
        <infomodel-rdf-sourcedir23>${infomodel-rdf-basedir}/spatialEntity</infomodel-rdf-sourcedir23>
        <infomodel-rdf-sourcedir24>${infomodel-rdf-basedir}/temporal</infomodel-rdf-sourcedir24>
        <infomodel-rdf-sourcedir25>${infomodel-rdf-basedir}/unit</infomodel-rdf-sourcedir25>
    </properties>

    <dependencies>
        <!-- IAIS tools -->
        <dependency>
            <groupId>de.fraunhofer.iais.eis</groupId>
            <artifactId>sparql-template-executor</artifactId>
            <version>2.0-SNAPSHOT</version>
            <optional>true</optional>
            <scope>system</scope>
            <systemPath>${user.home}/projects/ids/sparqlTemplateExecutor/target/sparql-template-executor-2.0-SNAPSHOT-jar-with-dependencies.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>de.fraunhofer.iais.eis</groupId>
            <artifactId>jrdfb</artifactId>
            <version>0.7-SNAPSHOT</version>
        </dependency>

        <!-- Bean validation -->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>5.2.4.Final</version>
        </dependency>
        <dependency>
            <groupId>javax.el</groupId>
            <artifactId>javax.el-api</artifactId>
            <version>RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.web</groupId>
            <artifactId>javax.el</artifactId>
            <version>RELEASE</version>
        </dependency>

        <!-- Others -->
        <dependency>
            <groupId>io.github.lukehutch</groupId>
            <artifactId>fast-classpath-scanner</artifactId>
            <version>LATEST</version>
        </dependency>

        <dependency>
            <groupId>org.unitils</groupId>
            <artifactId>unitils-core</artifactId>
            <version>3.4.2</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>RELEASE</version>
        </dependency>

    </dependencies>

    <build>

        <resources>
            <resource>
                <directory>doc/diagram/</directory>
                <includes>
                    <include>classes.png</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>

            <!-- include test classes to jar for documentation -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- execute the java beans and diagram generation based on the Infomodel files and the SPARQL templates -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <id>generate-java-and-diagram</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <classpathScope>compile</classpathScope>
                            <mainClass>de.fraunhofer.iais.eis.generate.Generator</mainClass>
                            <arguments>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir2}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir3}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir5}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir6}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir7}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir8}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir9}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir10}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir11}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir12}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir13}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir14}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir15}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir16}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir17}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir18}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir19}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir20}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir22}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir23}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir24}</argument>
                                <argument>-vd</argument><argument>${infomodel-rdf-sourcedir25}</argument>
                                <argument>-td</argument>
                                <argument>${basedir}/src/templates/diagram</argument>
                                <argument>-td</argument>
                                <argument>${basedir}/src/templates/java</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>render-diagram</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>dot</executable>
                            <workingDirectory>/tmp</workingDirectory>
                            <arguments>
                                <argument>-T</argument>
                                <argument>png</argument>
                                <argument>-o</argument>
                                <argument>classes.png</argument>
                                <argument>classes.dot</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- copy generated code to package src directory -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-java-beans</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <outputDirectory>${basedir}</outputDirectory>
                    <resources>
                        <resource>
                            <targetPath>${basedir}/src/main/java/de/fraunhofer/iais/eis</targetPath>
                            <directory>/tmp</directory>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </resource>
                        <resource>
                            <targetPath>${basedir}/doc/diagram</targetPath>
                            <directory>/tmp</directory>
                            <includes>
                                <include>**/*.png</include>
                            </includes>
                        </resource>
                    </resources>
                </configuration>

            </plugin>

            <!-- remove generated code from tmp and package directory -->
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>/tmp</directory>
                            <includes>
                                <include>*.java</include>
                                <include>*.png</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                        <fileset>
                            <directory>${basedir}/src/main/java/de/fraunhofer/iais/eis</directory>
                            <includes>
                                <include>*.java</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                        <fileset>
                            <directory>${basedir}/doc/diagram</directory>
                            <includes>
                                <include>*.png</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

            <!-- attach source to jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- javdoc generation -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.10.4</version>
                <executions>
                    <execution>
                        <id>attach-javadoc</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <additionalparam>-Xdoclint:none</additionalparam>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.0</version>

                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>assemble-all</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>isst-repo</id>
            <name>Maven repository at ISST</name>
            <url>https://mvn.isst.fraunhofer.de/artifactory/ids-local</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>isst-repo</id>
            <name>Maven repository at ISST</name>
            <url>https://mvn.isst.fraunhofer.de/artifactory/ids-local</url>
        </repository>
    </repositories>

</project>