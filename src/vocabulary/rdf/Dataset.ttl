@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .

@prefix ids: <http://industrialdataspace.org/2016/10/ids/core#> .
@prefix valid: <http://industrialdataspace.org/2017/01/ids/validation#> .

# Classes
# -------

ids:Dataset rdfs:subClassOf dcat:Dataset;
    a owl:Class;
    rdfs:label "Dataset"@en;
    rdfs:comment "Dataset on the Industrial Dataspace. May be a data offering, a subset of a dataset that is in the state of being transfered or an aggregation of multiple other datasets."@en;
    ids:validation [
        owl:onProperty ids:creationDate;
        valid:constraint "@javax.validation.constraints.NotNull";
    ].

# Properties
# ----------

ids:creationDate rdfs:subPropertyOf dct:dateSubmitted;
    a owl:DatatypeProperty;
    rdfs:label "creationDate"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:dateTime;
    rdfs:comment "Date of creation of the InfrastructureComponent."@en.

ids:format rdfs:subPropertyOf dct:format;
    a owl:DatatypeProperty;
    rdfs:label "format"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:string;
    rdfs:comment "The file format of the dataset. ids:mediaType SHOULD be used if the type of the distribution is defined by IANA."@en.

ids:mediaType rdfs:subPropertyOf dcat:mediaType;
    a owl:DatatypeProperty;
    rdfs:label "mediaType"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:anyURI;
    rdfs:comment "The media type of the dataset, as defined by IANA."@en.

ids:version rdfs:subPropertyOf dct:hasVersion;
    a owl:DatatypeProperty;
    rdfs:label "version"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:string;
    rdfs:comment "Version identifier of the InfrastructureComponent."@en.
