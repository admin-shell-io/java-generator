@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .

@prefix ids: <http://industrialdataspace.org/2016/10/ids/core#> .
@prefix valid: <http://industrialdataspace.org/2017/01/ids/validation#> .

# Classes
# -------

ids:Dataset rdfs:subClassOf dcat:Dataset;
    a owl:Class;
    rdfs:label "Dataset"@en;
    rdfs:comment "Dataset on the Industrial Dataspace. May be a data offering, a subset of a dataset that is in the state of being transfered or an aggregation of multiple other datasets."@en;
    ids:validation [
        owl:onProperty ids:datasetTitle;
        valid:relationType "@OneToMany";
        valid:constraint "@javax.validation.constraints.NotNull";
    ];
    ids:validation [
        owl:onProperty ids:datasetDescription;
        valid:relationType "@OneToMany";
    ];
    ids:validation [
        owl:onProperty ids:contentCreator;
        valid:constraint "@javax.validation.constraints.NotNull";
    ];
    ids:validation [
        owl:onProperty ids:coversTemporal;
        valid:relationType "@OneToMany";
    ];
    ids:validation [
        owl:onProperty ids:coversSpatial;
        valid:relationType "@OneToMany";
    ].

# Properties
# ----------

ids:datasetTitle rdfs:subPropertyOf dct:title;
	a owl:DatatypeProperty;
	rdfs:label "datasetTitle"@en;
	rdfs:domain ids:Dataset;
	rdfs:range rdfs:Literal;
	rdfs:comment "Title of the Dataset."@en.

ids:datasetDescription rdfs:subPropertyOf dct:description;
	a owl:DatatypeProperty;
	rdfs:label "datasetDescription"@en;
	rdfs:domain ids:Dataset;
	rdfs:range rdfs:Literal;
	rdfs:comment "Freetext description of the Dataset.".

ids:creationDate rdfs:subPropertyOf dct:dateSubmitted;
    a owl:DatatypeProperty;
    rdfs:label "creationDate"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:dateTime;
    rdfs:comment "Date of creation of the InfrastructureComponent."@en.

ids:format rdfs:subPropertyOf dct:format;
    a owl:DatatypeProperty;
    rdfs:label "format"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:string;
    rdfs:comment "The file format of the dataset. ids:mediaType SHOULD be used if the type of the distribution is defined by IANA."@en.

ids:mediaType rdfs:subPropertyOf dcat:mediaType;
    a owl:ObjectProperty;
    rdfs:label "mediaType"@en;
    rdfs:domain ids:Dataset;
    rdfs:range ids:IANAMediaType;
    rdfs:comment "The media type of the dataset, as defined by IANA."@en.

ids:version rdfs:subPropertyOf dct:hasVersion;
    a owl:DatatypeProperty;
    rdfs:label "version"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:string;
    rdfs:comment "Version identifier of the InfrastructureComponent."@en.

ids:contentCreator
    a owl:ObjectProperty;
    rdfs:label "contentCreator"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:anyURI;
    rdfs:comment "Participant responsible for creating the content of the Dataset."@en.

ids:conformsToStandard
    a owl:DatatypeProperty;
    rdfs:label "conformsTo"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:anyURI;
    rdfs:comment "The standard the Dataset conforms to."@en.

ids:licenseDocument rdfs:subPropertyOf dct:license;
    a owl:ObjectProperty;
    rdfs:label "licenseDocument"@en;
    rdfs:domain ids:Dataset;
    rdfs:range ids:LicenseDocument;
    rdfs:comment "License of the Dataset. Refers to common standard licenses used in the IDS."@en.

ids:licenseReference rdfs:subPropertyOf dct:license;
    a owl:ObjectProperty;
    rdfs:label "licenseReference"@en;
    rdfs:domain ids:Dataset;
    rdfs:range xsd:anyURI;
    rdfs:comment "References a license document that is publicly available on the Web."@en.

ids:coversIndustry a owl:ObjectProperty;
    rdfs:label "coversIndustry"@en;
    rdfs:domain ids:Dataset;
    rdfs:range ids:ISICIndustry;
    rdfs:comment "Industry branch covered by the Dataset."@en.

ids:coversTemporal rdfs:subPropertyOf dct:temporal;
    rdfs:label "coversTemporal"@en;
    rdfs:domain ids:Dataset;
    rdfs:range ids:TemporalEntity;
    rdfs:comment "Temporal period or instance covered by the dataset."@en.

ids:coversSpatial rdfs:subPropertyOf dct:spatial;
    rdfs:label "coversSpatial"@en;
    rdfs:domain ids:Dataset;
    rdfs:range ids:SpatialEntity;
    rdfs:comment "Spatial location covered by the dataset."@en.

